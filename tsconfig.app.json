{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.d.ts",
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules"
  ],
  "compilerOptions": {
    // Baseurl tells the compiler where to find the module, and all non -relative module imports will be regarded as the Baseurl.
    "baseUrl": ".",
    // Power mapping configuration of non-relative module
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    // "types": [
    //   "element-plus/global"
    // ]
  }
}
