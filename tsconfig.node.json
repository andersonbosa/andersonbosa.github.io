{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    /* NOTE
    Please note that this approach comes with some risks, as you won't have
    type safety for JavaScript code. It's essential to be cautious when incorporating
    JavaScript files, as type errors in those files won't be caught during compilation.
    */
    // "allowJs": true,
    // "checkJs": false,
    /* NOTEEND */
    /*  */
    "noEmit": true,
    /*  */
    "sourceMap": true, /* default: false */
    "strict": true, /* default: false */
    "resolveJsonModule": true, /* default: false */
    "esModuleInterop": false, /* default: false */
    /*  */
    "composite": true, /* default: value */
    /*  */
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    /*  */
    "allowImportingTsExtensions": true,
    /*  */
    "types": [
      "node"
    ],
    "lib": [
      "ESNext",
      "dom",
      "WebWorker"
    ]
  }
}
